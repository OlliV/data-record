    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.3.1",
    "prettier": "2.4.1",
    "tmp-promise": "3.0.2",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "typescript": "4.4.4"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true
  }
